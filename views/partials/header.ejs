<!doctype HTML>
<html>
	<head>
		<title>Blog</title>
		<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="/stylesheets/css.css">
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
		<script src="https://code.jquery.com/jquery-3.4.1.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	</head>
	<body>
		
		<nav class="navbar navbar-default">
		  <div class="container">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
			  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			  </button>
			  <!-- <img class="logo" src="https://i.pinimg.com/originals/9b/d8/8c/9bd88c8e74d666fed60487f95f419c12.png"> -->
				<a class="navbar-brand" href="/">Students Opinion Society</a>
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			  <ul class="nav navbar-nav navbar-right">
				  <li class="link" class="active"><a href="/blogs">Blog <span class="sr-only">(current)</span></a></li>
				<li class="link"><a href="#">Link</a></li>
			<%	if(currentUser) { %>
				  <li class="link"><a href="#"><%= currentUser.username %></a></li>
				  <li class="link"><a href="/logout">Logout <i class="fas fa-sign-out-alt"></i></a></li>
				<%  } else { %>
				  <li class="link"><a href="/verify_email">Sign Up <i class="fas fa-user-plus"></i></a></li>
				<li class="link"><a href="/login">Login <i class="fas fa-sign-in-alt"></i></a></li>
				<% } %>
			  </ul>
			</div><!-- /.navbar-collapse -->
		  </div><!-- /.container-fluid -->
		</nav>
		
		
		<div class="container">	
			<% if(success && success.length > 0) { %>
				<div class="alert alert-success" role="alert">
					<%= success %>
				</div>
			<% } else if(error && error.length > 0) { %>
				<div class="alert alert-danger" role="alert">
					<%= error %>
				</div>
			<% } %>
		</div>
		
	